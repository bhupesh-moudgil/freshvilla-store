# ==========================================
# FRESHVILLA ENTERPRISE BACKEND CONFIGURATION
# ==========================================
# IMPORTANT: Copy this to .env and replace with real values
# NEVER commit .env to Git!

# Server Configuration
PORT=5000
NODE_ENV=development
API_VERSION=v1

# ==========================================
# DATABASE CONFIGURATION (PostgreSQL)
# ==========================================
# Get these from your Supabase/Database provider dashboard
DB_HOST=your-database-host-here.supabase.com
DB_PORT=6543
DB_NAME=postgres
DB_USER=postgres.your_project_id
DB_PASSWORD=REPLACE_WITH_YOUR_STRONG_DB_PASSWORD
DB_DIALECT=postgres

# Connection Pool Settings
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# ==========================================
# JWT AUTHENTICATION
# ==========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-12345
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# ==========================================
# ADMIN DEFAULT CREDENTIALS
# ==========================================
ADMIN_EMAIL=admin@freshvilla.com
ADMIN_PASSWORD=Admin@123

# ==========================================
# FILE UPLOAD CONFIGURATION
# ==========================================
# Maximum file sizes (in MB)
MAX_IMAGE_SIZE=5
MAX_VIDEO_SIZE=50
MAX_DOCUMENT_SIZE=10

# Upload directories
UPLOAD_DIR=./uploads
UPLOAD_IMAGES_DIR=./uploads/images
UPLOAD_VIDEOS_DIR=./uploads/videos
UPLOAD_DOCUMENTS_DIR=./uploads/documents

# Auto-commit images to GitHub
AUTO_COMMIT_IMAGES=false

# Cloudinary Configuration (Optional)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ==========================================
# CORS & SECURITY
# ==========================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# EMAIL CONFIGURATION
# ==========================================
# SMTP Settings (Mailgun)
SMTP_HOST=smtp.mailgun.org
SMTP_PORT=587
SMTP_USER=info@freshvilla.in
SMTP_PASSWORD=your-mailgun-smtp-password
SMTP_FROM=info@freshvilla.in
SMTP_FROM_NAME=FreshVilla

# Email Queue Settings
EMAIL_QUEUE_CONCURRENCY=5
EMAIL_QUEUE_ATTEMPTS=3

# ==========================================
# REDIS CONFIGURATION
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==========================================
# LOGGING & MONITORING
# ==========================================
# Winston Logging
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_SIZE=5m
LOG_MAX_FILES=5

# Sentry Error Tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_PROFILES_SAMPLE_RATE=1.0

# ==========================================
# SESSION & SECURITY
# ==========================================
SESSION_SECRET=your-session-secret-key
COOKIE_SECRET=your-cookie-secret-key
SETTINGS_ENCRYPTION_KEY=your-64-char-hex-encryption-key

# ==========================================
# PAYMENT GATEWAYS (Optional)
# ==========================================
# Stripe
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Razorpay
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# PayPal
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# ==========================================
# REAL-TIME FEATURES
# ==========================================
SOCKET_IO_PORT=5000
SOCKET_IO_PATH=/socket.io

# ==========================================
# BUSINESS SETTINGS
# ==========================================
# Vendor Commission (percentage)
VENDOR_COMMISSION_RATE=15

# Review Settings
REVIEW_AUTO_APPROVE=false
REVIEW_MIN_RATING=1
REVIEW_MAX_RATING=5

# Cart Settings
CART_SESSION_EXPIRY_DAYS=30
CART_ABANDONED_THRESHOLD_HOURS=24

# Coupon Settings
COUPON_CODE_PREFIX=FV
COUPON_CODE_LENGTH=8

# ==========================================
# EXTERNAL SERVICES (Optional)
# ==========================================
# SMS Provider (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# WhatsApp Business API
WHATSAPP_API_URL=
WHATSAPP_API_KEY=
WHATSAPP_PHONE_NUMBER=

# Google Analytics
GA_TRACKING_ID=

# Firebase (for push notifications)
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

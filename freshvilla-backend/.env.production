# ===========================================
# GCP PRODUCTION (YugabyteDB)
# For Google Cloud VM Deployment
# ===========================================

# Server Configuration
PORT=5000
NODE_ENV=production

# Deployment Target
DEPLOY_ENV=prod-gcp

# YugabyteDB on Google VM
DB_HOST=localhost
DB_PORT=5433
DB_NAME=freshvilla
DB_USER=yugabyte
DB_PASSWORD=change-this-secure-password-in-production

# JWT Configuration
JWT_SECRET=change-this-to-strong-random-secret-in-production
JWT_EXPIRE=7d

# Admin Credentials (Change in production!)
ADMIN_EMAIL=admin@freshvilla.com
ADMIN_PASSWORD=Change-This-Secure-Password-123!

# CORS - Your production domain
FRONTEND_URL=https://your-production-domain.com
